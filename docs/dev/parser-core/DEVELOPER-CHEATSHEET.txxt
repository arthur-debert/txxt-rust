    6.2. Error Case Test
    
        #[test]
        fn test_element_invalid() {
            let corpus = TxxtCorpora::load("txxt.core.spec.element.invalid.case").unwrap();
            assert!(corpus.is_error_case());
            
            let result = parse_element(&corpus.source_text);
            assert!(result.is_err());
            
